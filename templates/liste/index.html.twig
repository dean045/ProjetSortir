{% extends 'base.html.twig' %}

{% block title %}Liste{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1 style="text-align: center">Liste des sorties programm√©es </h1>
    <table>
        <thead>
        <tr>
            <th colspan="1">Nom de la sortie</th>
            <th colspan="1">Date de la sortie</th>
            <th colspan="1">Cloture</th>
            <th colspan="1">inscrits/places</th>
            <th colspan="1">Etat</th>
            <th colspan="1">Inscrit</th>
            <th colspan="1">Organisateur</th>
            <th colspan="1">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for sortie in liste %}
            <tr>
                <td>{{ sortie.nom }}</td>
                <td>{{ sortie.datedebut|date('d/m/Y H:i') }}</td>
                <td>{{ sortie.dateLimiteInscription|date('d/m/Y H:i') }}</td>
                <td>{{ "inscrit/"~sortie.nbinscriptionsmax }}</td>
                <td>{{ sortie.etatsortie }}</td>
                <td></td>
                <td>{{ sortie.organisateur.username }}</td>
                <td><a>Afficher</a></td>
            </tr>
        {% endfor %}

        </tbody>
    </table>

</div>
{% endblock %}
