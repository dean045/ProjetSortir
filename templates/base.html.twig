<!doctype html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="https://getbootstrap.com/docs/4.0/assets/img/favicons/favicon.ico">

    <title>{% block title %}Eni Sortie{% endblock %}</title>

    <link rel="stylesheet" href="css/app.css">
    <link rel="canonical" href="https://getbootstrap.com/docs/4.0/examples/pricing/">
    <link href="https://getbootstrap.com/docs/4.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://getbootstrap.com/docs/4.0/examples/pricing/pricing.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
</head>

<body>

<div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-0 bg-white border-bottom box-shadow">
    <a class="my-0 mr-md-auto font-weight-normal" href="{{ url('liste') }}"><h5 >Eni-Sortie</h5></a>
    <nav class="my-2 my-md-0 mr-md-3 container d-flex flex-row-reverse bd-highlight">
        {% if app.user %}
            <a class="btn btn-primary mx-2" href="{{ url('profil') }}">Mon profil</a>
            <a class="btn btn-primary mx-2" href="{{ url('creersortie') }}">Ajouter une sortie</a>
            {% if is_granted('ROLE_ADMIN') %}
                <div class="dropdown mx-2">
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Panel admin
                    </button>
                    <div class="dropdown-menu " aria-labelledby="dropdownMenuButton">
                        <a class="dropdown-item" href="{{ url('admin') }}">Gestion des utilisateurs</a>
                        <a class="dropdown-item" href="{{ url('ville') }}">Ajouter une ville</a>
                        <a class="dropdown-item" href="{{ url('site') }}">Ajouter un site</a>
                    </div>
                </div>
            {% endif %}
        {% endif %}

    </nav>
    {% if app.user %}
        <a class="btn btn-outline-primary" href="/logout">Se déconnecter</a>
    {% else %}
        <a class="btn btn-outline-primary" href="login">Se connecter</a>
    {% endif %}
</div>

<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
    {% block top %}{% endblock %}
</div>

<div class="container">

    {# read and display all flash messages #}
    {% for type, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ type }}" role="alert">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    {% block body %}{% endblock %}

    <footer class="pt-4 my-md-4 pt-md-2 border-top">
        <div align="center">Eni-Sortie © 2021 - Brahim Hajji Baba, Justin Renault, Gabriel Manchelin - Tous droits réservés</div>
    </footer>
</div>


<!-- Bootstrap core JavaScript
================================================== -->
<!-- Placed at the end of the document so the pages load faster -->
<script>window.jQuery || document.write('<script src="https://getbootstrap.com/docs/4.0/assets/js/vendor/jquery-slim.min.js"><\/script>')</script>
<script src="https://getbootstrap.com/docs/4.0/assets/js/vendor/popper.min.js"></script>
<script src="https://getbootstrap.com/docs/4.0/dist/js/bootstrap.min.js"></script>
<script src="https://getbootstrap.com/docs/4.0/assets/js/vendor/holder.min.js"></script>
<script>
    Holder.addTheme('thumb', {
        bg: '#55595c',
        fg: '#eceeef',
        text: 'Thumbnail'
    });
</script>
</body>
</html>
